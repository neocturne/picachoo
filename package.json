{
	"name": "picachoo",
	"version": "0.0.0",
	"author": "Matthias Schiffer <mschiffer@universe-factory.net>",
	"license": "MIT",
	"private": true,
	"main": ".webpack/main",
	"scripts": {
		"start": "electron-forge start --",
		"package": "electron-forge package",
		"build": "electron-forge build",
		"lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'"
	},
	"config": {
		"forge": {
			"plugins": [
				[
					"@electron-forge/plugin-webpack",
					{
						"mainConfig": "./build/webpack.main.js",
						"renderer": {
							"config": "./build/webpack.renderer.js",
							"entryPoints": [
								{
									"html": "./src/renderer/index.html",
									"js": "./src/renderer/index.tsx",
									"name": "main_window"
								}
							]
						}
					}
				]
			],
			"makers": [
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin",
						"linux"
					]
				}
			]
		}
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.52",
		"@electron-forge/maker-zip": "^6.0.0-beta.52",
		"@electron-forge/plugin-webpack": "^6.0.0-beta.52",
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/minimist": "^1.2.0",
		"@types/react": "^16.9.43",
		"@types/react-dom": "^16.9.8",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0",
		"css-loader": "^4.1.1",
		"electron": "^8.5.2",
		"electron-devtools-installer": "^3.1.1",
		"eslint": "^7.5.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.8",
		"file-loader": "^6.0.0",
		"prettier": "^2.0.5",
		"style-loader": "^1.2.1",
		"ts-loader": "^8.0.1",
		"typescript": "^4.0.2",
		"webpack": "^4.43.0"
	},
	"dependencies": {
		"@material-ui/core": "^5.0.0-alpha.4",
		"@material-ui/icons": "^5.0.0-alpha.4",
		"@material-ui/styles": "^5.0.0-alpha.1",
		"electron-disable-file-drop": "^1.0.2",
		"file-url": "^3.0.0",
		"minimist": "^1.2.5",
		"react": "^17.0.0-rc.0",
		"react-dom": "^17.0.0-rc.0",
		"typeface-roboto": "^0.0.75"
	}
}
